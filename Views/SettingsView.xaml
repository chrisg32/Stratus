<ContentDialog
    x:Class="Stratus.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="using:Stratus.Util"
    mc:Ignorable="d"
    Title="Settings" IsPrimaryButtonEnabled="False" Background="{StaticResource SettingsBackground}">

    <StackPanel>
        <Button Style="{StaticResource SettingsButtonStyle}" Content="OK" Click="Ok_OnClick" util:Ext.Cursor="Hand"/>
    </StackPanel>
</ContentDialog>
