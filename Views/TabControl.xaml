<UserControl
    x:Class="Stratus.Views.TabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Stratus.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="75"
    d:DesignWidth="300">

    <Grid Background="IndianRed">
        <StackPanel Orientation="Horizontal" >
            <FontIcon Glyph="&#xE128;" FontFamily="Segoe MDL2 Assets" FontWeight="ExtraLight" FontSize="15" Foreground="{StaticResource UiForeground}"/>
            <TextBlock Foreground="{StaticResource UiForeground}" Text="{Binding Title}"/>
        </StackPanel>
    </Grid>
</UserControl>
